  "dependencies": {
    "express": "^4.18.2",
    "sqlite": "^4.2.1",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.2.3",
    "axios": "^1.4.0",
    "typescript": "^5.0.4"
  }
